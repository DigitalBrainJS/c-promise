{
  "name": "c-promise2",
  "version": "0.3.0",
  "description": "Cancelable promise chain with progress capturing and other extra features",
  "author": {
    "name": "Dmitriy Mozgovoy",
    "email": "robotshara@gmail.com",
    "url": "http://github.com/DigitalBrainJS/"
  },
  "main": "./dist/c-promise.cjs.js",
  "module": "./dist/c-promise.mjs",
  "es2015": "./dist/c-promise.mjs",
  "browser": "./dist/c-promise.umd.js",
  "unpkg": {
    "default": "./dist/c-promise.umd.js",
    "module": "./dist/c-promise.js",
    "production": "./dist/c-promise.umd.min.js"
  },
  "scripts": {
    "test": "mocha ./test/runner.js --exit --timeout=3000",
    "test:watch": "nodemon --watch lib/ --watch ./test/tests --exec \\\"npm test\\\"",
    "test:coverage": "nyc --check-coverage npm run test",
    "coverage:report": "nyc report --reporter=html --reporter=text",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "prepublishOnly": "npm run build && npm run test:coverage && npm run docs",
    "postversion": "git push && git push --tags",
    "build": "rollup -c",
    "build:watch": "nodemon --watch lib/ --exec \\\"npm run build\\\"",
    "dev": "cross-env NODE_ENV=development \"npm run test:watch\"",
    "playground": "node playground/generator.js || true",
    "playground:watch": "nodemon --watch ./playground --watch lib/ --exec \\\"npm run playground\\\"",
    "docs": "jsdoc2md -t jsdoc2md/README.hbs.md lib/c-promise.js > README.md",
    "docs:namepaths": "jsdoc2md ./lib/c-promise.js --namepaths"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs ; git add ."
    }
  },
  "repository": "https://github.com/DigitalBrainJS/c-promise.git",
  "bugs": {
    "url": "https://github.com/DigitalBrainJS/c-promise/issues"
  },
  "nyc": {
    "lines": 60,
    "functions": 60,
    "branches": 60,
    "statements": 60,
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    },
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [
    "promise",
    "cancelable",
    "cancellable",
    "progress",
    "cancel",
    "abortable",
    "abort",
    "AbortController",
    "AbortSignal",
    "async",
    "signal",
    "await",
    "promises",
    "generator",
    "co",
    "yield",
    "race",
    "delay",
    "wait",
    "bluebird",
    "deferred",
    "cancellation",
    "aborting",
    "close",
    "closable",
    "task",
    "p-cancelable"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "husky": "^4.3.0",
    "install": "^0.13.0",
    "jsdoc-to-markdown": "^6.0.1",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "npm": "^6.14.8",
    "nyc": "^15.1.0",
    "rollup": "^2.26.10",
    "rollup-plugin-terser": "^7.0.2"
  }
}
